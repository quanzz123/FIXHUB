<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh toán thành công</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .success-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 40px;
            margin: 50px auto;
            max-width: 600px;
            text-align: center;
        }

        .success-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #28a745, #20c997);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            animation: successPulse 2s ease-in-out infinite;
        }

        .success-icon i {
            font-size: 50px;
            color: white;
        }

      

        .success-title {
            color: #28a745;
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .success-subtitle {
            color: #6c757d;
            font-size: 18px;
            margin-bottom: 30px;
        }

        .transaction-details {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 25px;
            margin: 30px 0;
            text-align: left;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #dee2e6;
        }

        .detail-row:last-child {
            border-bottom: none;
            font-weight: bold;
            font-size: 18px;
            color: #28a745;
        }

        .detail-label {
            color: #6c757d;
            font-weight: 500;
        }

        .detail-value {
            color: #333;
            font-weight: 600;
        }

        .action-buttons {
            margin-top: 30px;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #007bff, #0056b3);
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            margin: 5px;
            transition: all 0.3s;
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,123,255,0.3);
        }

        .btn-outline-custom {
            border: 2px solid #6c757d;
            color: #6c757d;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            margin: 5px;
            transition: all 0.3s;
        }

        .btn-outline-custom:hover {
            background: #6c757d;
            color: white;
            transform: translateY(-2px);
        }

        .support-info {
            background: #e3f2fd;
            border-left: 4px solid #2196f3;
            padding: 20px;
            margin-top: 30px;
            border-radius: 5px;
            text-align: left;
        }

        .support-info h6 {
            color: #1976d2;
            margin-bottom: 10px;
        }

        .support-info p {
            margin-bottom: 5px;
            color: #424242;
        }

        .receipt-number {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 5px;
            padding: 15px;
            margin: 20px 0;
            font-family: 'Courier New', monospace;
        }

        .receipt-number strong {
            color: #856404;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="success-container">
            <!-- Success Icon -->
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>

            <!-- Success Message -->
            <h1 class="success-title">Thanh toán thành công!</h1>
            <p class="success-subtitle">Giao dịch của bạn đã được xử lý thành công</p>

            <!-- Receipt Number -->
            <div class="receipt-number">
                <strong>Mã giao dịch:</strong> #TXN-2025-0129-001234
            </div>

            <!-- Transaction Details -->
            <div class="transaction-details">
                <h5 class="mb-3"><i class="fas fa-receipt mr-2"></i>Chi tiết giao dịch</h5>

                <div class="detail-row">
                    <span class="detail-label">Quỹ hoạt động Hội</span>
                    <span class="detail-value">20.000đ</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">Quỹ hoạt động Đoàn</span>
                    <span class="detail-value">20.000đ</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">Hội phí</span>
                    <span class="detail-value">8.000đ</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">Đoàn phí</span>
                    <span class="detail-value">8.000đ</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">Phí giao dịch</span>
                    <span class="detail-value">0đ</span>
                </div>

                <div class="detail-row">
                    <span class="detail-label">Tổng cộng</span>
                    <span class="detail-value">56.000đ</span>
                </div>
            </div>

            <!-- Additional Info -->
            <div class="row text-left">
                <div class="col-md-6">
                    <p>
                        <strong>Phương thức thanh toán:</strong><br>
                        <i class="fas fa-credit-card mr-2"></i>Thẻ tín dụng (**** 1234)
                    </p>
                </div>
                <div class="col-md-6">
                    <p>
                        <strong>Thời gian giao dịch:</strong><br>
                        <i class="fas fa-clock mr-2"></i>29/01/2025 14:30:15
                    </p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button class="btn btn-primary-custom">
                    <i class="fas fa-download mr-2"></i>Tải hóa đơn
                </button>
                <button class="btn btn-outline-custom">
                    <i class="fas fa-home mr-2"></i>Về trang chủ
                </button>
            </div>

            <div class="action-buttons">
                <button class="btn btn-outline-custom">
                    <i class="fas fa-history mr-2"></i>Xem lịch sử giao dịch
                </button>
                <button class="btn btn-outline-custom">
                    <i class="fas fa-plus mr-2"></i>Nạp thêm tiền
                </button>
            </div>

            <!-- Support Information -->
            <div class="support-info">
                <h6><i class="fas fa-headset mr-2"></i>Cần hỗ trợ?</h6>
                <p><i class="fas fa-phone mr-2"></i><strong>Hotline:</strong> 1900-1234</p>
                <p><i class="fas fa-envelope mr-2"></i><strong>Email:</strong> support@university.edu.vn</p>
                <p><i class="fas fa-clock mr-2"></i><strong>Giờ làm việc:</strong> 8:00 - 17:00 (Thứ 2 - Thứ 6)</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add click functionality to buttons
        document.addEventListener('DOMContentLoaded', function() {
            // Download receipt button
            document.querySelector('.btn-primary-custom').addEventListener('click', function() {
                alert('Đang tải hóa đơn...');
                // Here you would implement actual PDF download functionality
            });

            // Home button
            document.querySelectorAll('.btn-outline-custom')[0].addEventListener('click', function() {
                // Redirect to home page
                window.location.href = '/';
            });

            // Transaction history button
            document.querySelectorAll('.btn-outline-custom')[1].addEventListener('click', function() {
                // Redirect to transaction history
                window.location.href = '/transaction-history';
            });

            // Top up button
            document.querySelectorAll('.btn-outline-custom')[2].addEventListener('click', function() {
                // Redirect back to top-up page
                window.location.href = '/top-up';
            });

            // Auto-redirect after 30 seconds (optional)
            setTimeout(function() {
                if (confirm('Bạn có muốn quay về trang chủ không?')) {
                    window.location.href = '/';
                }
            }, 30000);
        });

        // Add confetti effect (optional)
        function createConfetti() {
            const colors = ['#ff6b6b', '#4ecdc4', '#45b7d1', '#96ceb4', '#ffeaa7'];
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.style.position = 'fixed';
                confetti.style.width = '10px';
                confetti.style.height = '10px';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = '-10px';
                confetti.style.zIndex = '1000';
                confetti.style.borderRadius = '50%';
                document.body.appendChild(confetti);

                const animation = confetti.animate([
                    { transform: 'translateY(0) rotate(0deg)', opacity: 1 },
                    { transform: 'translateY(100vh) rotate(360deg)', opacity: 0 }
                ], {
                    duration: Math.random() * 2000 + 1000,
                    easing: 'ease-out'
                });

                animation.onfinish = () => confetti.remove();
            }
        }

        // Trigger confetti on page load
        window.addEventListener('load', createConfetti);
    </script>
</body>
</html>
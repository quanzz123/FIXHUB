@using FIXHUB.Models;
@model IList<ProductCategory>



<h1>Danh sách danh mục Sản phẩm</h1>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">
                    <a type="button" class="btn btn-primary m-2" asp-area="Admin" asp-controller="Guides" asp-action="Create">
                        <i class="bi bi-plus-circle"></i>
                        Thêm mới
                    </a>
                </h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Tên danh muc</th>
                                <th scope="col">Mô tả </th>
                                
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var category in Model)
                            {



                                <tr>
                                    <th scope="row">@category.ProductCategoryId</th>
                                    <td>@category.CategoryName</td>
                                    <td>@category.Description</td>
                                   
                                    <td>
                                        <a asp-area="Admin" asp-controller="Product" asp-action="EditCategory" asp-route-id="@category.ProductCategoryId" class="btn btn-warning m-2"><i class="bi bi-pencil-fill"></i>Sửa </a>
                                        <a asp-area="Admin" asp-controller="Product" asp-action="RemoveCategory" asp-route-id="@category.ProductCategoryId" class="btn btn-danger m-2"><i class="bi bi-eraser-fill"></i>Xoá</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->

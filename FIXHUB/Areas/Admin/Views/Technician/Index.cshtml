
@using FIXHUB.ViewModels;
@model IList<TechnicianVM>



<h1>Danh sách kĩ thuât viên FIXHUB</h1>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">
                    <a type="button" class="btn btn-primary m-2" asp-area="Admin" asp-controller="Technician" asp-action="Create">
                        <i class="bi bi-plus-circle"></i>
                        Thêm mới
                    </a>
                </h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Tiêu đề</th>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Tóm tắt</th>
                                <th scope="col">Ẩn/Hiện</th>
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var tech in Model)
                            {
                                <tr>
                                    <th scope="row">@tech.UserId</th>
                                    <td>@tech.UserName</td>
                                    <td>
                                        <img src="@tech.AvatarUrl" style="width:50px;height:50px" />
                                    </td>
                                    <td>@tech.Bio</td>
                                    <td>@tech.Expertise</td>
                                    <td>@tech.Rating</td>                              
                                    <td>
                                        <a asp-area="Admin" asp-controller="Technician" asp-action="Edit" asp-route-id="@tech.UserId" class="btn btn-warning m-2"><i class="bi bi-pencil-fill"></i>Sửa </a>
                                        <a asp-area="Admin" asp-controller="Technician" asp-action="Remove" asp-route-id="@tech.UserId" class="btn btn-danger m-2"><i class="bi bi-eraser-fill"></i>Xoá</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->

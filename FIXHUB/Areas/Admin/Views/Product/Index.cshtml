@using FIXHUB.Models;
@model IList<Product>



<h1>Danh sách danh mục hướng dẫn</h1>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">
                    <a type="button" class="btn btn-primary m-2" asp-area="Admin" asp-controller="Guides" asp-action="Create">
                        <i class="bi bi-plus-circle"></i>
                        Thêm mới
                    </a>
                </h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Tên</th>
                                <th scope="col">danh mục </th>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Mô tả</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Tồn</th>
                                <th scope="col">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var product in Model)
                            {



                                <tr>
                                    <th scope="row">@product.ProductId</th>
                                    <td>@product.ProductName</td>
                                    <td>@product.ProductCategoryId</td>
                                    <td>
                                        <img src="~/img/product/@product.ImageUrl" style="width:50px;height:50px" />
                                    </td>
                                    <td>@product.Description</td>
                                    <td>@product.Price</td>
                                    <td>@product.StockQuantity</td>
                                    @* <td><input type="checkbox" disabled @(gui.IsActive ? "checked" : "") /> </td> *@
                                    <td>
                                        <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning m-2"><i class="bi bi-pencil-fill"></i>Sửa </a>
                                        <a asp-area="Admin" asp-controller="Product" asp-action="Remove" asp-route-id="@product.ProductId" class="btn btn-danger m-2"><i class="bi bi-eraser-fill"></i>Xoá</a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->

@model FIXHUB.Areas.Admin.ViewModel.GuideCategoryVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Thêm mới danh mục hướng dân</h6>
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <input asp-for="CategoryId" type="hidden" />
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label">Tên danh mục</label>
                        <input asp-for="CategoryName" type="text" class="form-control" id="exampleInputEmail1"
                               aria-describedby="emailHelp">

                    </div>
                    <div class="mb-3">
                        <label asp-for="ParentId" class="form-label">Danh mục cha</label>
                        <select asp-for="ParentId" asp-items="Model.ParentCategories" class="form-select">
                            <option value="">-- Không chọn --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Description" type="text" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">File ảnh mới(nếu có)</label>
                        <input name="ImageFile" class="form-control" type="file">
                        @if (!string.IsNullOrEmpty(Model.ImgUrl))
                        {
                            <div class="mt-2">
                                <img src="@Model.ImgUrl" width="150" />
                            </div>
                        }
                    </div>


                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch"
                               id="flexSwitchCheckDefault" />
                        <label asp-for="IsActive" class="form-check-label" for="flexSwitchCheckDefault">
                            Ẩn/Hiện
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-action="Index" type="submit" class="btn btn-primary">Thoát</a>

                </form>
            </div>
        </div>
    </div>
</div>
@{
    var summernote = new FIXHUB.Areas.Admin.Models.SummerNote("#Description");
    <partial name="_SummerNote" model="summernote" />
}
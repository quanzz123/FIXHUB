@model List<FIXHUB.ViewModels.HistoryStepVM>
@section Styles {

<style>
    .main-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .history-table {
        width: 100%;
        margin-bottom: 2rem;
    }

        .history-table td {
            padding: 0.75rem 0;
            border-top: 1px solid #dee2e6;
        }

        .history-table tr:first-child td {
            border-top: none;
        }

    .date-column {
        width: 100px;
        color: #666;
        font-size: 0.9rem;
    }

    .time-column {
        width: 100px;
        color: #666;
        font-size: 0.9rem;
    }

    .editor-column {
        width: 180px;
    }

    .editor-link {
        color: #0275d8;
        text-decoration: none;
    }

        .editor-link:hover {
            text-decoration: underline;
        }

    .verified-icon {
        color: #0275d8;
        margin-left: 5px;
    }

    .edit-description {
        color: #0275d8;
    }

    .edit-details {
        color: #666;
        font-size: 0.9rem;
    }

    .sidebar {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 4px;
        margin-bottom: 2rem;
    }

    .sidebar-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .ownership-list {
        padding-left: 1.5rem;
    }

        .ownership-list li {
            margin-bottom: 0.5rem;
        }
</style>
}

<div class="container mt-4 mb-5">
    <h1 class="main-title">Guide History: How Install a Mac SSD into an OWC Envoy Pro Enclosure</h1>

    <div class="row">
        <div class="col-lg-8">
            <table class="history-table">
                <tbody>
                    @foreach(var lis in Model) {

                        <tr>
                            <td class="date-column">@lis.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="time-column">@lis.CreatedAt.ToString("hh:mm:ss tt")</td>
                            <td class="editor-column">
                                <a href="#" class="editor-link">@lis.UserName</a>
                            </td>
                            <td>
                                <div class="edit-description">Bước #@lis.StepNumber Đã được sửa: @lis.Title, <a style="font-size: 14px" href="#">[Xem thêm...]</a></div>
                               @*  <div class="edit-details">(Denied by Clay Eickemeyer)</div> *@
                            </td>
                        </tr>
                    
                    }
                </tbody>
            </table>
        </div>

        <div class="col-lg-4">
            <div class="sidebar">
                <h2 class="sidebar-title">Browse past guide revisions</h2>
                <p>View guide <a href="#" class="editor-link">changes over time</a>, with the option to replace the current version with a snapshot from history.</p>
            </div>

            <div class="sidebar">
                <h2 class="sidebar-title">Guide Ownership</h2>
                <ul class="ownership-list">
                    <li>Taylor Dixon: 89.32%</li>
                    <li>Jeff Suovanen: 7.77%</li>
                    <li>Jeff Stephens: 0.97%</li>
                    <li>Scott Head: 0.97%</li>
                    <li>Carsten Frauenheim: 0.97%</li>
                </ul>
            </div>
        </div>
    </div>
</div>